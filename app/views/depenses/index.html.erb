<h1>Dépenses</h1>

<div class="container">
  <%= bootstrap_form_with url: depenses_path, method: :get, class: "filter-form" do |form| %>
    <div class="form-group row">
      <%= form.label :start_date, "Je préférerais voir les dépenses du", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-4">
        <%= form.date_field :start_date, value: params[:start_date], class: "form-control" %>
      </div>
      <%= form.label :end_date, "au", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-4">
        <%= form.date_field :end_date, value: params[:end_date], class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-12 text-center">
        <%= form.submit "Filtrer les dépenses", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Date</th>
      <th>Catégorie</th>
      <th>Montant</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @depenses.where(user: current_user).order(:date).each do |depense| %>
      <tr>
        <td><%= depense.date %></td>
        <td><%= depense.category.name %></td>
        <td><%= depense.amount %>€</td>
        <td><%= link_to 'Voir', depense, class: "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Modifier', edit_depense_path(depense), class: "btn btn-primary btn-sm" %></td>
        <td>
          <%= link_to 'Supprimer',
                      depense,
                      method: :delete,
                      data: { confirm: 'Êtes-vous sûr ?' },
                      class: "btn btn-danger btn-sm",
                      title: "Supprimer" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>
  <div id="container" style="width:100%; height:400px;"></div>
</div>
<script>
    if (document.readyState !== 'loading') {
        console.log('document is already ready, just execute code here');
        createChart();
    } else {
        document.addEventListener('DOMContentLoaded', function () {
            console.log('document was not ready, place code here');
            createChart();
        });
    }

    function createChart() {
        Highcharts.chart('container', {
            chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false,
                type: 'pie'
            },
            title: {
                text: 'Répartition des dépenses selon les catégories',
                align: 'center'
            },
            tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
            },
            accessibility: {
                point: {
                    valueSuffix: '%'
                }
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                    }
                }
            },
            series: [
                {
                    name: 'Brands',
                    colorByPoint: true,
                    data: [
                        <% Category.where(user: current_user).each do |category| %>
                            {
                                name: '<%= category.name %>',
                                y: <%= Depense.where(category: category).sum(:amount) %>
                            },
                        <% end %>
                    ]
                }
            ]
        });
    }
</script>

  <%= link_to 'Nouvelle dépense', new_depense_path, class: "btn btn-primary" %>
</div>

<style>
    .filter-form {
        margin-bottom: 30px;
    }
</style>
