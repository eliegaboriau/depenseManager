<h1>Dépenses</h1>

<div class="container">
  <%= bootstrap_form_with url: depenses_path, method: :get, class: "filter-form" do |form| %>
    <div class="form-group row">
      <%= form.label :start_date, "Je préférerais voir les dépenses du", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-4">
        <%= form.date_field :start_date, value: params[:start_date], class: "form-control" %>
      </div>
      <%= form.label :end_date, "au", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-4">
        <%= form.date_field :end_date, value: params[:end_date], class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-12 text-center">
        <%= form.submit "Filtrer les dépenses", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Date</th>
      <th>Catégorie</th>
      <th>Montant</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @depenses.where(user: current_user).order(:date).each do |depense| %>
      <tr>
        <td><%= depense.date %></td>
        <td><%= depense.category.name %></td>
        <td><%= depense.amount %>€</td>
        <td><%= link_to 'Voir', depense, class: "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Modifier', edit_depense_path(depense), class: "btn btn-primary btn-sm" %></td>
        <td>
          <%= link_to 'Supprimer',
                      depense,
                      method: :delete,
                      data: { confirm: 'Êtes-vous sûr ?' },
                      class: "btn btn-danger btn-sm",
                      title: "Supprimer" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nouvelle dépense', new_depense_path, class: "btn btn-primary" %>
</div>

<style>
    .filter-form {
        margin-bottom: 30px;
    }
</style>
