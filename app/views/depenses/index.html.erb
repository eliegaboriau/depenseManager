<h1>Dépenses</h1>

<%= bootstrap_form_with url: depenses_path, method: :get do |form| %>
  <p> Je préfererai voir mes dépenses du <%= form.date_field :start_date, value: params[:start_date], label: '&nbsp;'.html_safe %> jusqu'au <%= form.date_field :end_date, value: params[:end_date], label: '&nbsp;'.html_safe %></p>
  <%= form.submit "Filter Expenses" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Catégorie</th>
      <th>Montant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @depenses.where(user: current_user).order(:date).each do |depense| %>
      <tr>
        <td><%= depense.date %></td>
        <td><%= depense.category.name %></td>
        <td><%= depense.amount %>€</td>
        <td><%= link_to 'Voir', depense %></td>
        <td><%= link_to 'Modifier', edit_depense_path(depense) %></td>
        <td><%= link_to 'Supprimer', depense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle dépense', new_depense_path %>
